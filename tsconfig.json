{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components": ["src/components"],
      "@icons": ["src/assets/icons"],
      "@api-manager": ["src/api-manager"],
      "@utils": ["src/lib/utils"],
      "@utils/server": ["src/lib/utils/server"],
      "@interfaces": ["src/lib/interfaces"],
      "@context": ["src/lib/context"],
      "@enum": ["src/lib/enum"],
      "@logic/*": ["src/lib/logic/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "rename.mjs"],
  "exclude": ["node_modules"]
}
